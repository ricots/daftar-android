                    android:textStyle="bold"
                    android:textSize="16sp"/>
            </RelativeLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="24dp"
            >

            <RelativeLayout
                android:layout_width="wrap_content"
